<Window x:Class="UpdateTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="League Tools Updater" Height="95" Width="525" WindowStyle="ToolWindow" Background="Black" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="274*" />
            <ColumnDefinition Width="229*" />
        </Grid.ColumnDefinitions>
        <Label Content="Installing Update..." FontFamily="Miramonte" FontSize="20" Foreground="White" Height="36" HorizontalAlignment="Left" Margin="2,10,0,0" Name="label1" VerticalAlignment="Top" Width="177" />
        <Button Content="Restart League Tools" Margin="0,12,12,16" Name="restartBtn" Style="{StaticResource GlassButton}" Visibility="Hidden" HorizontalAlignment="Right" Width="140" Grid.Column="1" Click="restartBtn_Click" />
        <Label Content="&lt;please wait&gt;" FontFamily="Miramonte" FontSize="14" Foreground="White" Height="30" HorizontalAlignment="Right" Margin="0,13,158,0" Name="statusLbl" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2" />
    </Grid>
</Window>
